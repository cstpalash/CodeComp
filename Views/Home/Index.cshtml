}

<div class="container">

    <div class="row">
        <div class="col-md-6">
            <div class="p-5 mb-4 bg-light rounded-3">
                <div class="container-fluid py-5">
                    <h3 class="fw-bold">game.Play(<label class="text-success">"Mastermind"</label>)</h3>
                    <hr />
                    <p class="col-md-12 fs-4">Participate into the most intellectual battle of algorithms. This is easy to get started in 10 minutes. See you in the leaderboard soon.</p>
                    <button class="btn btn-primary btn-lg" type="button">Rules</button>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="p-5 mb-4 rounded-3">
                <div class="container-fluid">
<pre>
<code id="code" style="display:none">
public static void main(String[] args) {
    me.wow();
    me.understand("Rules"); //15 min
    me.createTeam();
    me.getStarted(); //10 min
    while(!me.algo().isBest()) {
        me.playWith("dummies");
        me.improve(me.algo()); //1 month
    }
    me.waitFor("the-final");
    me.playWith("ninja");
    if(me.win("the-final"))
        me.celebrate();
    else
        me.waitFor("the next CodeComp");
}
</code>
</pre>
                </div>
            </div>
        </div>
    </div>

    

</div>

@section Scripts{
    <script type="text/javascript">
        $(document).ready(function () {

            runAnimation($("#code"));

        });

        function runAnimation(element) {
            $(element).hide();

            var text = $(element).text();
            $(element).text("");
            $(element).show();

            var textLength = text.length;
            var currentPosition = 0

            if (textLength > 0) {
                var timer = setInterval(function () {

                    var currentText = $(element).text();

                    $(element).text(currentText + text.substr(currentPosition, 1));

                    ++currentPosition;

                    if (currentPosition == textLength - 1) {
                        clearTimeout(timer);
                    }

                }, 100);
            }

            
        }
    </script>
}